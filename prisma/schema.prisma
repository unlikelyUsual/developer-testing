generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model properties {
  id          Int      @id @default(autoincrement())
  project     String
  title       String
  price       Float
  bedrooms     Int
  area        Float
  description String
  type        PropertyType
  images      Json
}

enum PropertyType {
  SALE
  RENT
}
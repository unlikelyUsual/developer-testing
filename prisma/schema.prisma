generator client {
  provider = "prisma-client-js"
  // binaryTargets = ["native", "linux-arm64-openssl-3.0.x"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model properties {
  id          Int      @id @default(autoincrement())
  project     String
  title       String
  price       Float
  bedrooms     Int
  area        Float
  description String
  type        PropertyType
  images      Json
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())

  //Single search index
  @@index([type])
  @@index([price])
  @@index([bedrooms])
  @@index([area])

  // Composite indexes for filter combinations
  @@index([type, price])
  @@index([type, bedrooms])
  @@index([type, area])

  @@index([price, bedrooms])
  @@index([price, area])

  @@index([bedrooms, area])

  @@index([type, price, bedrooms, area])
}

enum PropertyType {
  SALE
  RENT
}